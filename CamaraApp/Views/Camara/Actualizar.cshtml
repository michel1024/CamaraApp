@model Camara
@{
    ViewBag.Title = "Actualizar";
}

<h2>Actualizar Cámara</h2>
<hr />

@using (Html.BeginForm("Actualizar", "Camara", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.CamaraId)

    <div class="w-50">
        <img src="@Url.Content(Model.Imagen)" class="img-fluid float-right" alt="Alternate Text" />
    </div>

    <div class="form-group">
        <label>Serial</label><br />
        @Html.TextBoxFor(x => x.Serial, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fabricante</label><br />
        @Html.TextBoxFor(x => x.Fabricante, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Descripción</label><br />
        @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="Imagen" name="Imagen" aria-describedby="inputGroupFileAddon01">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>
    </div>
    <div class="form-group col-5 d-flex">
        <input type="submit" class="btn btn-primary mr-2" value="Actualizar" />
        <a href="@Url.Action("Detalle", "Camara", new { id = Model.CamaraId })" class="btn btn-outline-info">Regresar</a>
    </div>
}


