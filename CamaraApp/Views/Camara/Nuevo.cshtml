@model Camara
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nueva Cámara</h2>
<hr />

@using (Html.BeginForm("Nuevo", "Camara", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Serial</label><br />
        @Html.TextBoxFor(x => x.Serial, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fabricante</label><br />
        @Html.TextBoxFor(x => x.Fabricante, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Descripción</label><br />
        @Html.TextBoxFor(x => x.Descripcion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
            </div>
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="Imagen" name="Imagen" aria-describedby="inputGroupFileAddon01">
                <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
            </div>
        </div>
    </div>
    <div class="form-group col-5 d-flex">
        <input type="submit" class="btn btn-primary mr-2" value="Agregar" />
    </div>
}

